{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Deployment stage",
    "localized-struct":{
        "$ref": "github-localized-struct.json"
    },
    "description": "GitHub Schema",
    "longDescription": "With GitHub, you can store your source code in a new or an existing GitHub repository.",
    "type": "object",
    "properties": {
        "repo_name": {
            "type": "string"
        },
        "repo_url": {
            "type": "string"
        }
    },
    "required": ["repo_name",  "repo_url"],
    "form": [
      {
        "type": "validator",
        "url": "/devops/setup/bm-helper/custom_github_helper.html"
      },
      {
        "type": "table",
        "columnCount": 3,
        "widths": ["47%", "6%", "47%"],
        "items": [
            {
              "type": "label",
              "title": "Source Repository"
            },
            {
              "type": "label",
              "title": ""
            },
            {
              "type": "label",
              "title": "Target Repository"
            },
            {
              "type": "text",
              "key": "repo_url"
            },
            {
              "type": "icon",
              "iconType": "right_arrow"
            },
            {
              "type": "text",
              "key": "repo_name"
            }
        ]
      }
    ] 
}
